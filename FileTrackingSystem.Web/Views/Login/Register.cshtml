
@{
    ViewData["Title"] = "Register";
}

<div id="register" class="animate form login_form">
    <section class="login_content">
        <form>
            <h1>Create Account</h1>
            <div>
                <input type="text" class="form-control" placeholder="Username" required="" />
            </div>
            <div>
                <input type="email" class="form-control" placeholder="Email" required="" />
            </div>
            <div>
                <input type="password" class="form-control" placeholder="Password" required="" />
            </div>
            <div>
                <button class="btn btn-primary" type="submit" href="index.html">Submit</button>
            </div>

            <div class="clearfix"></div>

            <div class="separator">
                <p class="change_link">
                    Already a member ?
                    <a asp-action="" asp-controller="Login" class="to_register"> Log in </a>
                </p>

                <div class="clearfix"></div>
                <br />


                <div>
                    <h1><i class="fa fa-paw"></i> File Tracking System!</h1>
                    <p>©2021 All Rights Reserved. <a href="https://www.b2lsolutions.in">B2l Software Solutions</a></p>
                </div>
            </div>
        </form>
    </section>
</div>
