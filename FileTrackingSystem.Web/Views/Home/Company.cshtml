
@{
    ViewData["Title"] = "Company";
}
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Branch <small>List</small> <a class="btn btn-primary" style="color:white;" onclick="AddNew();">Add New</a></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>

                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        @*<p class="text-muted font-13 m-b-30">
                                The Buttons extension for DataTables provides a common set of options, API methods and styling to display buttons on a page that will interact with a DataTable. The core library provides the based framework upon which plug-ins can built.
                            </p>*@
                        <table id="DesignDatatable" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Status</th>
                                    <th>Created At</th>
                                    <th>Action</th>
                                </tr>
                            </thead>


                            <tbody id="DataTable">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AreaModel" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="mtitle" class="modal-title"> </h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div id="mbody" class="modal-body">
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
<script>
    function LoadData() {
        $("#DesignDatatable").DataTable({
            dom: "Blfrtip",
            buttons: [
                {
                    extend: "copy",
                    className: "btn-sm"
                },
                {
                    extend: "csv",
                    className: "btn-sm"
                },
                {
                    extend: "excel",
                    className: "btn-sm"
                },
                {
                    extend: "pdfHtml5",
                    className: "btn-sm"
                },
                {
                    extend: "print",
                    className: "btn-sm"
                },
            ],
            responsive: true,
            // Design Assets
            stateSave: true,
            autoWidth: true,
            destroy: true,
            // ServerSide Setups
            processing: true,
            serverSide: true,
            // Paging Setups
            paging: true,
            // Searching Setups
            searching: { regex: true },
            // Ajax Filter
            ajax: {
                url: "/ViewData/LoadCompany/",
                type: "POST",
                contentType: "application/json",
                dataType: "json",
                data: function (d) {
                    return JSON.stringify(d);
                }
            },
            // Columns Setups
            columns: [
                { data: "name" },
                { data: "address" },
                { data:"email" },
                { data: "phone" },
                { data: "status" },
                {
                    data: "createdAt",
                    render: function (data, type, row) {
                        console.log(row);
                        // If display or filter data is requested, format the date
                        if (type === "display" || type === "filter") {
                            return moment(data).format("ddd DD/MM/YYYY HH:mm:ss");
                        }
                        // Otherwise the data type requested (`type`) is type detection or
                        // sorting data, for which we want to use the raw date value, so just return
                        // that, unaltered
                        return data;
                    }
                },
                {
                    data: null,
                    render: function (data, type, row) {
                        return '<a href="#" class="btn btn-primary  btn-sm checkbox-toggle" title="Edit" onclick="editBranch(\'' + row.id + '\');"><i class="fa fa-edit"></i></a>  <a class="btn btn-danger  btn-sm checkbox-toggle" onclick="delBranch(\'' + row.id + '\');" title="delete"><i class="fa fa-trash"></i></a>';
                    }
                }
            ],
            // Column Definitions
            columnDefs: [
                { targets: "no-sort", orderable: false },
                { targets: "no-search", searchable: false },
                {
                    targets: "trim",
                    render: function (data, type, full, meta) {
                        if (type === "display") {
                            data = strtrunc(data, 10);
                        }
                        return data;
                    }
                },
                { targets: "date-type", type: "date-eu" }
            ]
        });
    }
    $(document).ready(function () {
        LoadData();
    });
    function AddNew() {
        $("#mbody").load("/Home/PopUpModelShow/AddCompany", function () {
            $("#mtitle").text("Add Branch");
            $("#AreaModel").modal({ backdrop: 'static', keyboard: false });
        });
    }
    function editBranch(id) {
        $("#mbody").load("/Home/PopUpModelShow/EditCompany-" + id, function () {
            $("#mtitle").text("Edit Branch");
            $("#AreaModel").modal({ backdrop: 'static', keyboard: false });
        });
    }
    function delBranch(id) {
        swal({
            title: "Are you sure?",
            text: "Your will not be able to recover this Record!",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Yes, delete it!",
            closeOnConfirm: false
        },
            function () {
                $.ajax({
                    url: "/Delete/DeleteDesignation/",
                    dataType: 'json',
                    type: 'post',
                    contentType: 'application/json',
                    processData: false,
                    data: JSON.stringify(id),
                    async: true,
                    success: function (response) {
                        swal("Deleted!", "Your Record has been deleted.", "success");
                        LoadData();
                    },
                    error: function (e) {
                        swal("Oops", e.responseText, "error");
                        LoadData();
                    }
                });
            });
    }
    function strtrunc(str, num) {
        if (str.length > num) {
            return str.slice(0, num) + "...";
        }
        else {
            return str;
        }
    }
</script>
